
@{
    ViewData["Title"] = "PersonalDetails";
}

<h1>Personal Details</h1>

@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>Enter your Name</td>
            <td>
                @Html.TextBox("username")
            </td>
        </tr>

        <tr>
            <td>Select Gender</td>
            <td>
                @Html.RadioButton("gender" , "Male") Male
                @Html.RadioButton("gender" , "Female") Female
            </td>
        </tr>

         <tr>
             <td>Select hobbies</td>
             <td>
                <input type="checkbox" name="hobbies" value="sport" />sport
                <input type="checkbox" name="hobbies" value="Reading" />Reading
                <input type="checkbox" name="hobbies" value="Travelling" />Travelling

             </td>
         </tr>

         <tr>
             <td>Select City</td>
             <td>@Html.DropDownList("Cities")</td>
         </tr>

         <tr>
             <td></td>
             <td>
                 <input type="submit" value="save"/>
             </td>
         </tr>

    </table>
}

